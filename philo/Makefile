# ANSI color codes for Makefile
BLACK   := \033[0;30m
RED     := \033[0;31m
GREEN   := \033[0;32m
YELLOW  := \033[0;33m
BLUE    := \033[0;34m
MAGENTA := \033[0;35m
CYAN    := \033[0;36m
WHITE   := \033[0;37m
RESET   := \033[0m

BOLD_BLACK   := \033[1;30m
BOLD_RED     := \033[1;31m
BOLD_GREEN   := \033[1;32m
BOLD_YELLOW  := \033[1;33m
BOLD_BLUE    := \033[1;34m
BOLD_MAGENTA := \033[1;35m
BOLD_CYAN    := \033[1;36m
BOLD_WHITE   := \033[1;37m

# Makefile for Philosophers
NAME = philo
RM = rm -rf
CFLAGS = -Wall -Wextra -Werror -pthread
OBJS_DIR = obj/
MKDIR = mkdir -p
SRCS = src/main.c \
		src/utils.c \
		src/init.c \
		src/print.c \
		src/time.c \
		src/simulation.c

OBJS = $(addprefix $(OBJS_DIR), $(notdir $(SRCS:.c=.o)))


# Rules
# $@ Automatic variable: it stands for the target name
# $^ Automatic variable: meaning "all prerequisites" listed to the right of
# the colon in your rule
$(NAME): $(OBJS)
	@echo "$(GREEN)ðŸ”—Linking object files...ðŸ”—$(RESET)"
	@$(CC) $(CFLAGS) -o $@ $^
	@echo "$(BOLD_GREEN)âœ…Executable created!âœ…$(RESET)"

$(OBJS_DIR)%.o: src/%.c
	@$(MKDIR) $(OBJS_DIR)
	@echo "$(BOLD_YELLOW)ðŸ”¨Compiling sources files into objects files...ðŸ”¨$(RESET)"
	@$(CC) $(CFLAGS) -c $< -o $@

all: $(NAME)

clean:
	@echo -n "Are you sure? This action is irreversible. [y/N] " && read ans && [ $${ans:-N} = y ]
	@echo "$(BOLD_RED)âŒDeleting object files folder...âŒ$(RESET)"
	@$(RM) $(OBJS_DIR)

fclean: clean
	@echo "$(BOLD_MAGENTA)âŒRemoving executable...âŒ$(RESET)"
	@$(RM) $(NAME)

re: fclean all

.phony: all clean fclean re
